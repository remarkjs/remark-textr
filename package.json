{
  "name": "remark-textr",
  "version": "5.0.1",
  "description": "remark plugin to improve typography with Textr",
  "license": "MIT",
  "keywords": [
    "markdown",
    "mdast",
    "plugin",
    "remark",
    "remark-plugin",
    "text",
    "textr",
    "typo",
    "typographic",
    "typography",
    "unified"
  ],
  "repository": "remarkjs/remark-textr",
  "bugs": "https://github.com/remarkjs/remark-textr/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Denys Dovhan <email@denysdovhan.com> (https://denysdovhan.com)",
  "contributors": [
    "Denys Dovhan <email@denysdovhan.com> (https://denysdovhan.com)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Vladimir Starkov <iamstarkov@gmail.com>",
    "Andrey Polischuk <andre.polischuk@gmail.com>"
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "lib/",
    "index.d.ts",
    "index.js"
  ],
  "dependencies": {
    "@types/mdast": "^3.0.0",
    "textr": "^0.3.0",
    "unified": "^10.0.0",
    "unist-util-visit": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/textr": "^0.3.0",
    "c8": "^8.0.0",
    "prettier": "^3.0.0",
    "remark": "^14.0.0",
    "remark-cli": "^11.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "^5.0.0",
    "typographic-ellipses": "^1.0.0",
    "typographic-quotes": "^2.0.0",
    "xo": "^0.56.0"
  },
  "scripts": {
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "format": "remark . --frail --output --quiet && prettier . --log-level warn --write && xo --fix",
    "prepack": "npm run build && npm run format",
    "test": "npm run build && npm run format && npm run test-coverage",
    "test-api": "node --conditions development test.js",
    "test-coverage": "c8 --100 --reporter lcov npm run test-api"
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-wooorm"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "ignoreCatch": true,
    "strict": true
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/prefer-string-replace-all": "off"
    }
  }
}
